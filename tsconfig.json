{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": false
  },
  "include": ["./src/env.d.ts", "**/*.ts", "**/*.tsx", "./src/**/*.astro"],
  "exclude": ["dist"]
}
