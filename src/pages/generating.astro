---
import Layout from '@/layouts/Layout.astro'
import GeneratingPage from '@/components/Generating'
import { Zap } from 'lucide-react'
import Footer from '@/components/Footer.astro'


const topic = Astro.url.searchParams.get('topic') ?? undefined
const jobId = Astro.url.searchParams.get('jobID') ?? undefined
---

<Layout>
  <div
    class="flex min-h-screen flex-col bg-gradient-to-b from-purple-50 to-white text-gray-900 dark:from-gray-900 dark:to-gray-800 dark:text-gray-100"
  >
    <header
      class="container mx-auto flex items-center justify-between px-4 py-6"
    >
      <a href="/" class="flex items-center space-x-2">
        <Zap className="h-8 w-8 text-purple-600" />
        <span class="text-2xl font-bold">LearnIt</span>
      </a>
    </header>
    <GeneratingPage client:load topic={topic} jobId={jobId} />
    <Footer />
  </div>
</Layout>
